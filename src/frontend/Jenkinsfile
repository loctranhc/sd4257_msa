pipeline {
    agent any
    triggers {
        githubPush()
    }

    stages {
        stage('Build Image') {
            steps {
                dir('src/frontend'){
                    sh 'docker build . -t fontend'
                }
            }
        }
        stage('Push Image to ACR') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}