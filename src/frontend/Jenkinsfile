pipeline {
    agent any
    triggers {
        githubPush()
    }

    stages {
        stage('Build Image') {
            steps {
                script{
                    sh 'cd /src/'
                    sh 'docker build . -t frontend'
                }
            }
        }
        stage('Push Image to ACR') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}