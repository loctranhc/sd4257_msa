pipeline {
    agent any
    stages {
        stage('Build Image') {
            steps {
                dir('src/frontend'){
                    sh "docker build -t frontend:${BUILD_NUMBER} ."
                    sh 'docker tag frontend:${BUILD_NUMBER} acrloctranhc.azurecr.io/frontend'
                }     
            }
        }
        stage('Push Image to ACR') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}